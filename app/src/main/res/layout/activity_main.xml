<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/hinhnen1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".LnLayoutMenu1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edSearch"
                android:hint="Địa điểm"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnSearch"
                android:layout_weight="3"
                android:textAllCaps="false"
                android:text="Tìm Kiếm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tvCity"
            android:text="Tên thành phố"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tvCountry"
            android:textColor="@android:color/black"
            android:text="Tên quốc gia"
            android:textSize="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tvCencius"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:text="Nhiệt độ"
            android:textSize="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tvStatus"
            android:text="Trạng thái"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/may"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp" />
                <TextView
                    android:id="@+id/tvMay"
                    android:text="mây"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/mua"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp" />
                <TextView
                    android:id="@+id/tvMua"
                    android:text="Mưa"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/gio"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp" />
                <TextView
                    android:id="@+id/tvGio"
                    android:text="Gió"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tvDate"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Ngày"
            android:textSize="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>